{
  "compilerOptions": {
    "target": "es5",

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": false,

    "noEmitHelpers": false,
    "noImplicitAny": true,

    "pretty": true,
    "outDir": "output",

    "sourceMap": true,
    "lib": ["es5", "dom"],

    "baseUrl": "./src",

    "types": [
      "core-js",
      "node"
    ]

  },

  "exclude": [
    "node_modules",
    "compiled",
    "output",
    "main.ts"
  ],

  "angularCompilerOptions": {
    "genDir": "compiled",
    "skipMetadataEmit" : true,
    "debug": true
  }
}
